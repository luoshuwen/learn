2.MySQL

$ sudo mysql -u root
USE mysql;
UPDATE user SET plugin='mysql_native_password' WHERE User='root';
FLUSH PRIVILEGES;
SET PASSWORD FOR root@'localhost' = PASSWORD('123456');
exit;

